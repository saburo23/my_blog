<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <% if signed_in? %>
    <%= link_to 'New Post', new_post_path %>
    <% end %>


    <% @posts.each do |post| %>
        <h2 id="title"><%= link_to post.title, post %></h2>
        <br>
        

        <%= sanitize(post.body) %>

        <br>
        <br>
        <br>
        <br>

      <div class="btn-group">
      <% if signed_in? %>
       
        <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_post_path(post) %></button>
        <button type="button" class="btn btn-default"><%= link_to 'Destroy', post, method: :delete, data: { confirm: '确定?' } %></button>
        <% end %>
        <button type="button" class="btn btn-default"><%= link_to '是的，我喜欢这文章！', like_post_path(post), method: :put %></button>
        
        <button type="button" class="btn btn-default">有<%= post.get_likes.size %>人喜欢
</button> 
    </div>
    <br>
<br>
<br>
<br>
    <% end %>
</div>
<div class = 'row'>
<div class = "col-md-3">
   
    <img src="http://planbino.com/sites/default/files/events/penguin.jpg" class="img-responsive">
</div>
</div>
<div class="center">
<%= will_paginate @posts %>
</div>